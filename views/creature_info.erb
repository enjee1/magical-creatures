<% @creature_stats += "Name: #{@selected_creature[:name]}" + "<br>" %>
<% @creature_stats += "Ability: #{@selected_creature[:ability]}" + "<br>" %>
<% if @selected_creature[:age].nil? %>
  <% @creature_stats += "Age: N/A" + "<br>" %>
<% else %>
  <% @creature_stats += "Age: #{@selected_creature[:age]}" + "<br>" %>
<% end %>
